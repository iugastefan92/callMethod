public class GradeBook{

private String courseName; //course name for this GradeBook - instance variable
    //all the methods in the class can manipulate this variable

        public void setCourseName(String name){

            //method to store the coursename
            courseName = name; //store the course name
        } //end method setCourseName

        //method to get the course name
        public String getCourseName()
        {
            return courseName;

        }//end method getCourseName();

    //method to display a welcome message to the GradEBook User
    public void displayMessage() {
        //call getCourseName to get the name of the course;
        System.out.printf("Welcome to the grade book for\n%s\n", getCourseName());
    }//end method displayMessage
}//end class GradeBook
